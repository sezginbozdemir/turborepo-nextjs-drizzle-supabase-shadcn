{
  "name": "@repo/database",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/src/index.d.ts",
      "import": "./dist/bundle.js",
      "default": "./dist/bundle.js"
    }
  },
  "scripts": {
    "dev": "tsc --noEmit -w --preserveWatchOutput",
    "build": "node ./esbuild.config.js && tsc --emitDeclarationOnly --declaration --outDir dist/types",
    "test": "vitest run",
    "db:push": "drizzle-kit push --config ./src/drizzle/drizzle.config.ts",
    "db:up": "drizzle-kit up --config ./src/drizzle/drizzle.config.ts",
    "db:generate": "drizzle-kit generate --config ./src/drizzle/drizzle.config.ts",
    "db:pull": "drizzle-kit introspect --config ./src/drizzle/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./src/drizzle/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config ./src/drizzle/drizzle.config.ts",
    "sb:types": "tsx ./src/supabase/generate-types.ts"
  },
  "devDependencies": {
    "@repo/vitest-config": "*",
    "@types/node": "^22.15.3",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-istanbul": "^4.0.18",
    "drizzle-kit": "^0.31.9",
    "supabase": "^2.76.9",
    "tsx": "^4.20.3",
    "typescript": "5.8.2",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@repo/shared": "*",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.52.1",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "esbuild": "^0.27.3",
    "pg": "^8.16.3",
    "tsc-alias": "^1.8.16"
  }
}
