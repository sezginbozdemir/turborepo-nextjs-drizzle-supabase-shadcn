{
  "extends": "@repo/typescript-config/node.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "#modules/*": ["./modules/*"]
    },
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "tests", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
