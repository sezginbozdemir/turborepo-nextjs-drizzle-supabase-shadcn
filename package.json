{
  "name": "turborepo-boilerplate",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter='./apps/web'",
    "build:api": "turbo run build --filter='./apps/api'",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:projects": "vitest run",
    "test:projects:watch": "vitest --watch",
    "view-report": "turbo run view-report",
    "start:web": "turbo run start --filter='./apps/web'",
    "start:api": "turbo run start --filter='./apps/'api",
    "db:up": "npm run db:up --workspace packages/database",
    "db:push": "npm run db:push --workspace packages/database",
    "db:pull": "npm run db:pull --workspace packages/database",
    "db:generate": "npm run db:generate --workspace packages/database",
    "db:migrate": "npm run db:migrate --workspace packages/database",
    "sb:types": "npm run sb:types --workspace packages/database",
    "purge:nm": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "purge:turbo": "find . -name '.turbo' -type d -prune -exec rm -rf '{}' +",
    "purge:next": "find . -name '.next' -type d -prune -exec rm -rf '{}' +",
    "purge:dist": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "purge:all": "npm run purge:nm && npm run purge:turbo && npm run purge:next && npm run purge:dist",
    "reinstall": "npm run purge:all && npm install"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@repo/vitest-config": "*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=22 <23"
  },
  "packageManager": "npm@11.10.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@repo/database": "*",
    "@repo/mailer": "*",
    "@repo/shared": "*",
    "@repo/ui": "*",
    "@t3-oss/env-core": "^0.13.8",
    "dotenv": "^17.2.1",
    "zod": "^4.0.14"
  }
}
